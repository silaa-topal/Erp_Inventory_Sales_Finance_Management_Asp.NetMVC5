@using erpV2.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Brand</th>
        <th>Stock</th>
        <th>Category</th>
        <th>Purchase Price</th>
        <th>Sale Price</th>
        <th>Product Image</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var p in Model)
    {
    <tr>
        <td>@p.ProductID</td>
        <td>@p.ProductName</td>
        <td>@p.ProductBrand</td>
        <td>@p.Stock</td>
        <td>@p.Category.CategoryName</td>
        <td>@p.PurchasePrice</td>
        <td>@p.SalePrice</td>
        <td>@p.ProductImage</td>
        
        <td>
            <a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger">Delete</a>
        </td>
        <td>
            <a href="/Product/BringProduct/@p.ProductID" class="btn btn-success">Update</a>
        </td>

    </tr>
    }
</table>
<a href="/Product/NewProduct/" class="btn btn-secondary">New Product</a>

